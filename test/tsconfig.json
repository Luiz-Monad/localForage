{
    "include": ["../test/**/*", "../src/**/*"],
    "exclude": ["../node_modules/**/*", "./build/**"],
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "moduleResolution": "Node",

        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": false,

        "lib": ["DOM", "ESNext"],

        // "allowJs": true,
        "checkJs": true,

        "rootDir": "..",
        "outDir": "./build/",
        "baseUrl": "./",
        "paths": {}
    }
}
